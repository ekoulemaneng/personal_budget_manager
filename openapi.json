                    }
                },
                "required": [
                    "id",
                    "title",
                    "budget",
                    "spent",
                    "remaining"
                ]
            },
            "Title": {
                "type": "string",
                "description": "The title of the envelope"
            },
            "Amount": {
                "type": "integer",
                "description": "The amount to be transferred"
            },
            "ResponseError":{
                "type": "object",
                "properties": {
                    "message": {
