                    },
                    "title": {
                        "type": "string",
                        "description": "The title of the envelope"
                    },
                    "budget": {
                        "type": "integer",
                        "description": "The budget amount for the envelope"
                    },
                    "spent": {
                        "type": "integer",
                        "description": "The amount spent from the envelope"
                    },
                    "remaining": {
                        "type": "integer",
